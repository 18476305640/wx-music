.playcontent,.playcontent>view:nth-of-type(1) {
  display: flex;
  justify-content: flex-start;
  width: 100%;
  height: 100%;
  background-color: #17181a;
  
}
.playcontent>view:nth-of-type(1) {
  width: 490rpx;

}
.playcontent>view:nth-of-type(2) {
}
.songImg {
  box-sizing: content-box;
  padding-left:10px ;
   width: 45px;
   display: flex;
   justify-content: center;
   align-items: center;
}
.songImg>image {
  display: block;
  width: 75%;
  height: 75%;
}
.songtext {
  display: flex;
  flex-wrap: wrap;
  color: #ffffff;
  flex: 1;
  width: calc(490rpx - 45px);

}
.songtext>text:nth-of-type(1) {
  font-weight: 600;
}
.songtext>text {
  width: 100%;
  height: 50%;
  text-indent: 5px;
  box-sizing: border-box;
  padding: 5rpx;
  line-height: clac(50% + 1px);
  font-size: 14px;

  white-space: nowrap;
  overflow:hidden;
  text-overflow: ellipsis;
}
.controller {
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  
}
.controller>view {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.controller>view>image {
  width: 100%;

}




