.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-content: space-between;
}
.container>view {
  width: 100%;
}
.title {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-content: flex-start; 
  margin-top:30rpx ;
}
.title>text {
  display: block;
  width: 100%;
  text-align: center;
  
}
.title>text:nth-of-type(1) {
  font-size: calc(750rpx * (20/320));
  line-height: calc(750rpx * (35/320));
}
.title>text:nth-of-type(2) {
  font-size: calc(750rpx * (14/320));
  line-height: calc(750rpx * (20/320));
}
.cover {  
  height: calc(550rpx) ;
  display: flex;
  justify-content: center;
}
.cover>view {
  width: calc(550rpx);
  height: calc(550rpx);
  border-radius: 50%;
  overflow: hidden;
}
@keyframes img_rotate {
  0% {
    transform:rotate(0deg);
  }
  100% {
    transform:rotate(360deg);
  }
}
.rotate_imge {
  animation: img_rotate 10s infinite linear;
}
.cover>view>image {
  display: block;
  width: 100%;
  
}
.play_state {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center ;
  height: 140rpx;
  width: 100%;
}
.play_state>text {
  display: block;
  text-align: center;
  text-align: center;
  box-sizing: border-box;
  padding:0px 20rpx;
  font-size: calc(750rpx * (14/320));
}
.play_state>view {
  flex: 1;

}