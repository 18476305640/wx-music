
.header-nav {
    width: 100%;
    display: flex;
    flex-wrap: nowrap;
    background-color: #17181a;
    align-items: center;
    color: #ffffff;
    font-weight: 400;
    
    position: fixed;
    left: 0px;
    left: 0px ;
    z-index: 100;
}
.header-nav>text {
    flex: 1;
    text-align: center;
    line-height: 30px;
}
text.active {
    color: #c05858;
    border-bottom:3px solid #c05858 ;
}

scroll-view {
    position: fixed;
    top: 33px;
    bottom: 45px;
    background-color: #17181a;
    
}




